{
  "hosting": {
    "target": "hr",
    "public": "./dist/pwa",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 4007
    },
    "ui": {
      "enabled": true
    }
  }
}